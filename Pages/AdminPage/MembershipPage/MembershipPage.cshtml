@page
@model MembershipPageModel
@{
    ViewData["Title"] = "Membership Page";
}

<link rel="stylesheet" href="~/css/AdminPageCSS/MembershipPage.css" />

<div class="membershippage">
    <aside class="sidebar">
        <div class="logo">
            <h2>Admin Panel</h2>
        </div>
        <nav class="nav">
            <ul>
                <li><a asp-page="/AdminPage/Dashboard/Dashboard" class="navItem">Dashboard</a></li>
                <li><a asp-page="/AdminPage/ClientPage/ClientPage" class="navItem">Clients</a></li>
                <li><a asp-page="/AdminPage/MembershipPage/MembershipPage" class="navItem">Memberships</a></li>
                <li><a asp-page="/AdminPage/ActivityPage/ActivityPage" class="navItem">Activities</a></li>
            </ul>
        </nav>
    </aside>

    <div class="searchBar">
        <form method="get">
            <input type="text" name="searchQuery" value="@Model.SearchQuery" placeholder="Search by name..." class="searchInput" />
            <button type="submit" class="searchButton">Search</button>
        </form>
    </div>

    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="error">@Model.Error</div>
    }

    @if (Model.FilteredMemberships.Count > 0)
    {
        <div class="table">
            <h3></h3>
            <table>
                <thead>
                    <tr>
                        <th>Activity Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var membership in Model.FilteredMemberships)
                    {
                        <tr>
                            <td>@membership.membership_type</td>
                            <td>@membership.start_date</td>
                            <td>@membership.end_date</td>
                            <td>@membership.price</td>
                            <td>
                                <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this membership?');">
                                    <input type="hidden" name="membershipId" value="@membership.membership_id" />
                                    <button type="submit" class="deleteButton">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="nodata">No membership data available</div>
    }
</div>
