@page
@model ActivityPageModel
@{
    ViewData["Title"] = "Activity Page";

}

<link rel="stylesheet" href="~/css/AdminPageCSS/ActivityPage.css" />

<div class="activitypage">
    <aside class="sidebar">
        <div class="logo">
            <h2>Admin Panel</h2>
        </div>
        <nav class="nav">
            <ul>
                <li><a asp-page="/AdminPage/Dashboard/Dashboard" class="navItem">Dashboard</a></li>
                <li><a asp-page="/AdminPage/ClientPage/ClientPage" class="navItem">Clients</a></li>
                <li><a asp-page="/AdminPage/MembershipPage/MembershipPage" class="navItem">Memberships</a></li>
                <li><a asp-page="/AdminPage/ActivityPage/ActivityPage" class="navItem">Activities</a></li>
            </ul>
        </nav>
    </aside>

    <div class="searchBar">
        <form method="get">
            <input type="text" name="searchQuery" value="@Model.SearchQuery" placeholder="Search by name..." class="searchInput" />
            <button type="submit" class="searchButton">Search</button>
        </form>

    </div>

    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="error">@Model.Error</div>
    }

    @if (Model.FilteredActivities.Count > 0)
    {
        <div class="table">
            <h3></h3>
            <table>
                <thead>
                    <tr>
                        <th>Activity ID</th>
                        <th>Activity Name</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var activity in Model.FilteredActivities)
                    {
                        <tr>
                            <td>@activity.activity_id</td>
                            <td>@activity.activity_name</td>
                            <td>@activity.act_price</td>
                            <td>
                                <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this activity?');">
                                    <input type="hidden" name="activityId" value="@activity.activity_id" />
                                    <button type="submit" class="actionButton">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="nodata">No activity data available</div>
    }
</div>