@page
@model ClientPageModel
@{
    ViewData["Title"] = "Client Page";
}

<link rel="stylesheet" href="~/css/AdminPageCSS/ClientPage.css" />

<div class="clientpage">
    <aside class="sidebar">
        <div class="logo">
            <h2>Admin Panel</h2>
        </div>
        <nav class="nav">
            <ul>
                <li><a asp-page="/AdminPage/Dashboard/Dashboard" class="navItem">Dashboard</a></li>
                <li><a asp-page="/AdminPage/ClientPage/ClientPage" class="navItem">Clients</a></li>
                <li><a asp-page="/AdminPage/MembershipPage/MembershipPage" class="navItem">Memberships</a></li>
                <li><a asp-page="/AdminPage/ActivityPage/ActivityPage" class="navItem">Activities</a></li>
            </ul>
        </nav>
    </aside>

    <div class="searchBar">
        <form method="get">
            <input type="text" name="searchQuery" value="@Model.SearchQuery" placeholder="Search by name..." class="searchInput" />
            <button type="submit" class="searchButton">Search</button>
        </form>
    </div>

    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="error">@Model.Error</div>
    }

    @if (Model.FilteredClients.Count > 0)
    {
        <div class="table">
            <h3>Clients</h3>
            <table>
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model.FilteredClients)
                    {
                        <tr>
                            <td>@client.client_fname</td>
                            <td>@client.client_lname</td>
                            <td>@client.address</td>
                            <td>@client.phone</td>
                            <td>@client.email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="nodata">No clients data available</div>
    }
</div>
